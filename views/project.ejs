<!DOCTYPE html>
<html lang="en">
    <head>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
        <%- include('head'); -%>
    </head>
    <body data-barba="wrapper">
        <%- include('header', {user: user}); -%>
        <main class="portfolio_body" data-barba="container" data-barba-namespace="project">
            <input style="display: none;" id="projectPortId" type="text" value="<%=project._id%>">
            <div class="project-root">
                <div id="loading_svg">
                    <img src="./img/loading.svg">
                </div>
                <h2 class="word-wrap project-root__title"><%=project.name%></h2>
                <div class="project-root__gallery">
                    <%- include('show-images.ejs', {images: images}); -%>
                </div>
            </div>
            <script type="text/javascript" src="./src/img-ajax.js"></script>
        </main>
        <%- include('footer'); -%>
    </body>
</html>