<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta charset="utf-8">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
        <%- include('head'); -%>
    </head>
    <body data-barba="wrapper">
        <%- include('header', {user: user}); -%>
        <main data-barba="container" data-barba-namespace="edit">
            <div class="edit">
                <div class="edit__currentProjects">
                    <% if (projects.length > 0) { %>
                        <h2 class="edit__currentProjects-title">Current Projects</h2>
                    <% } else { %>
                        <h2 class="edit__currentProjects-title">No Projects Currently</h2>
                    <% } %>
                    <div class="edit__currentProjects-grid">
                            <% projects.forEach(function(proj, index) { %>
                            <div class="edit__currentProjects-grid__project">
                                <img class="cover-img edit__currentProjects-grid__project_img" src="data:image/<%=proj.homeImg.contentType%>;base64,
                                <%=proj.homeImg.data.toString('base64')%>">
                                <div class="project_name">
                                    <%=proj.name%>
                                </div>
                                <div class="view_project">
                                    Edit Project &#x000BB;
                                </div>
                            </div>
                            <% }) %>
                    </div>
                </div>
                <form enctype="multipart/form-data" id="uploadForm" action='/edit' method="post">
                    <input type="file" name="homePhoto" placeholder="Home Photo" required>
                    <input onchange="showImgs(this.files)" type="file" name="projectPhotos" multiple required><br>
                    <input type="text" name="projectName" placeholder="Project Name" required><br>
                    <input type="submit" value="Upload Image" name="submit"><br>
                    <span id = "status"></span>
                </form>
                <div id="show"></div>
            </div>
            <script>
                var show = document.getElementById("show");
        
                function removeAllChildNodes(parent) {
                    while (parent.firstChild) {
                        parent.removeChild(parent.firstChild);
                    }
                }
        
                function showImgs(files) {
                    removeAllChildNodes(show);
        
                    for(i = 0; i < files.length; i++) {
                        var new_img = document.createElement("img");
                        
                        new_img.src = window.URL.createObjectURL(files[i]);
                        show.appendChild(new_img);
                    }
                }
            </script>
        </main>
    </body>
    <%- include('footer'); -%>
</html>

